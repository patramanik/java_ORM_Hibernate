<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="com.demo.entity.Employee" table="Employee">

		<id name="empid"> <!-- Primary Key -->
			<column name="EMPID"></column>
		</id>
		<property name="name" type="java.lang.String">
			<column name="NAME" />
		</property>
		<property name="sal" type="java.lang.Integer">
			<column name="empsal" />
		</property>

	</class>
</hibernate-mapping>
